// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Personal {
  uid          String  @id @unique
  name         String
  surname      String
  identityCard String
  typeCard     String
  phone        String
  address      String
  workArea     String
  job          String
  salary       Decimal
  hours        Hour[]
  days         Day[]
}

model Hour {
  id         Int      @id @default(autoincrement())
  startTime  String
  endTime    String
  hours      String
  day        Day      @relation(fields: [idDay], references: [id])
  personal   Personal @relation(fields: [personalId], references: [uid])
  idDay      Int
  personalId String
}

model Day {
  id         Int      @id @default(autoincrement())
  date       DateTime
  dayHours   String
  hours      Hour[]
  personal   Personal @relation(fields: [personalId], references: [uid])
  personalId String
}
